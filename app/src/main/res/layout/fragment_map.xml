<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_page_rootview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.testmap.Controlers.Fragments.PageFragment"
    android:gravity="center">

    <com.google.android.gms.maps.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="539dp"
        android:layout_alignParentTop="true"
        android:layout_weight="1" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="bottom|end"
        android:src="@android:drawable/ic_menu_search" />


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:background="#000000">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/restaurant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@android:color/holo_blue_light"
                android:src="@drawable/fastfoodwhite"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/hotel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@android:color/holo_green_light"
                android:src="@drawable/hotelwhite"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/pharmacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@android:color/holo_orange_light"
                android:src="@drawable/pharmacywhite"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/market"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@android:color/holo_purple"
                android:src="@drawable/marketwhite"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/bank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@android:color/holo_red_light"
                android:src="@drawable/bankwhite"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/bus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/colorPrimary"
                android:src="@drawable/buswhite"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/mall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="?android:attr/textColorLinkInverse"
                android:src="@drawable/mallwhite"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@android:color/holo_blue_dark"
                android:src="@drawable/moviewhite"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/cafe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/place_autocomplete_prediction_secondary_text"
                android:src="@drawable/cafewhite"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/spa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#009921"
                android:src="@drawable/spawhite"
                android:visibility="visible" />



        </LinearLayout>
    </HorizontalScrollView>


</RelativeLayout>

